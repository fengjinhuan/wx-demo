<form bindsubmit="formSubmit">
  <text class="add-tit">联系人</text>
  <view class="add-name">
    <text>姓名</text>
    <input placeholder="请填写收货人姓名" focus="true" maxlength="20" placeholder-style="color:#888;font-size:32rpx;flex-grow: 1;" name="name" />
  </view>
  <view class="add-name">
    <text>手机</text>
    <input placeholder="请填写手机号" maxlength="11" focus="true" type="number" placeholder-style="color:#888;font-size:32rpx;flex-grow: 1;" name="m" />
  </view>
  <text class="add-tit">收货地址</text>
  <view class="add-name">
    <text>地址/学校</text>
    <input placeholder="例:能源学院" focus="true" placeholder-style="color:#888;font-size:32rpx;flex-grow: 1;" name="site" />
  </view>
  <view class="add-name">
    <text>楼号-门牌号</text>
    <input placeholder="例:3号楼419宿舍" focus="true" placeholder-style="color:#888;font-size:32rpx;flex-grow: 1;" name="f" />
  </view>
  <button type="primary" formType="submit" size="default">保存</button>
</form>