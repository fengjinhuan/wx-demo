page {
  background: #eee;
}

.list {
  height: 200rpx;
  width: 100%;
  background: #fff;
  display: flex;
  border-top: 1px solid #afafaf;
  border-bottom: 1px solid #dedede;
  align-items: center;
  margin-bottom: 10rpx;
}

.list-img {
  height: 130rpx;
  width: 200rpx;
}
.center{
  width: 100%;
  text-align: center;
  line-height: 100rpx;
}

.list-main {
  padding-left: 20rpx;
  box-sizing: border-box;
  height: 130rpx;
  width: 460rpx;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.list-title {
  width: 100%;
  display: flex;
  align-items: center;
}

.list-pice {
  width: 100%;
  color: red;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.list-show {
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  width: 250rpx;
  margin-right: 30rpx;
}

.jian {
  float: left;
  background: #e6e6e6;
  color: #000;
  font-weight: bold;
}

.jia {
  float: right;
  background: #1aac19;
  color: #fff;
}

.list-icon {
  height: 70rpx;
  width: 70rpx;
  font-weight: bold;
  border-radius: 50%;
  font-size: 40rpx;
}
