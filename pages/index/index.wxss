/**index.wxss**/

.box {
  height: 300rpx;
  width: 100%;
  display: flex;
  border-bottom: 10rpx solid #eee;
  justify-content: space-around;
  align-items: center;
}

.box-list {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.box-list-icon {
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 150rpx;
  width: 150rpx;
  border-radius: 50%;
  background: #ff4949;
}

.list-icon {
  background-size: contain;
  height: 100rpx;
  width: 100rpx;
  background: url(../../images/hm.png) no-repeat;
}

.box-list:nth-child(2) .box-list-icon .list-icon {
  background: url(../../images/xx.png) no-repeat;
}

.box-list:nth-child(3) .box-list-icon .list-icon {
  background: url(../../images/ls.png) no-repeat;
}

.box-list:nth-child(2) .box-list-icon {
  background: #f7ba2a;
}

.box-list:nth-child(3) .box-list-icon {
  background: #58b7ff;
}

.box-list-tit {
  height: 50rpx;
  width: 100%;
  text-align: center;
  line-height: 50rpx;
  color: #555;
  font-size: 30rpx;
}

.now-title {
  color: #1aac19;
}

.title {
  height: 70rpx;
  width: 100%;
  font-size: 36rpx;
  line-height: 70rpx;
  text-align: center;
}

.box-nav {
  height: 70rpx;
  width: 100%;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #989898;
  font-size: 26rpx;
  line-height: 70rpx;
  text-align: center;
  display: flex;
  justify-content: space-around;
}

.nav-list {
}

.con-box {
  height: 240rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 10rpx;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.con-show {
  box-sizing: border-box;
  height: 100%;
  flex-grow: 1;
  margin-left: 10rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  align-items: center;
}

.show-name {
  color: #1aac19;
  font-size: 34rpx;
}

.con-show text {
  width: 100%;
  text-align: center;
}

.show-pice {
  color: #ff4949;
}
